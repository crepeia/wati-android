<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.daniela.progresso.MainActivity"
    tools:showIn="@layout/app_bar_main">


    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:id="@+id/graph" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/graph"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="65dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/TextView01"
                android:text="$ economizado"
                android:layout_weight="1"
                android:textColor="#000000"
                android:padding="0dip"
                android:gravity="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/TextView02"
                android:text="$ Não economizado"
                android:layout_weight="1"
                android:textColor="#000000"
                android:padding="0dip"
                android:gravity="center"
                android:textSize="16sp"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:inputType="numberDecimal"
                android:layout_weight="1"/>

            <EditText
                android:inputType="numberDecimal"
                android:layout_weight="1"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"

            android:layout_height="match_parent">

            <TextView
                android:id="@+id/TextView03"
                android:text="Cigarros Fumados"
                android:layout_weight="1"
                android:textColor="#000000"
                android:padding="0dip"
                android:gravity="center"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/TextView04"
                android:text="Cigarros Não fumados"
                android:layout_weight="1"
                android:textColor="#000000"
                android:padding="0dip"
                android:gravity="center"
                android:textSize="16sp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:inputType="number"
                android:layout_weight="1"/>

            <EditText
                android:inputType="number"
                android:layout_weight="1"/>
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/TextView05"
                android:text="Pontuação"
                android:layout_weight="1"
                android:textColor="#000000"
                android:padding="0dip"
                android:gravity="center"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/TextView06"
                android:text="Sua Posição"
                android:layout_weight="1"
                android:textColor="#000000"
                android:padding="0dip"
                android:gravity="center"
                android:textSize="16sp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:inputType="number"
                android:layout_weight="1"/>

            <EditText
                android:inputType="number"
                android:layout_weight="1"/>
        </TableRow>
    </TableLayout>

    <TextView
        android:text="Cigarros fumados hoje: "
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_width="170dp"
        android:layout_height="match_parent"
        android:layout_marginTop="440dp"/>

    <Button
        android:text="+1"
        android:textStyle="bold"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="180dp"
        android:id="@+id/button"/>

    <Button
        android:text="-1"
        android:textStyle="bold"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="250dp"
        android:id="@+id/button2"/>


</RelativeLayout>
